<tr>
    <td>        
        <%= customer.name %>
    </td>
    <td>    
        <%= customer.phone %>
    </td>
    <td>    
        <%= customer.email %>
    </td>
    <td>    
        <%= customer.address %>
    </td>
    <td>        
        <%= customer.remark %>    
    </td>
    <td>        
        <%= customer.requests.size %>    
    </td>
    <td>        
        <%= customer.samples.size %>
    </td>
    <td>
        <div class="row align-items-center">
            <div class="col-2"><%= link_to 'Show', customer, class: "btn btn-success btn-sm" %></div>
            <div class="col-2"><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-warning btn-sm" %></div>
            <div class="col-2"><%= button_to 'Destroy', customer, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: "btn btn-danger btn-sm" %></div>
        </div>
    </td>
</tr>
<%= bootstrap_form_with(model: request, layout: :horizontal) do |form| %>
  <% if request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.collection_select(:customer_id, Customer.all, :id, :display, prompt: true) %>
  </div>

  <div>
    <%= form.date_field :receive %>
  </div>
  <div>
    <%= form.text_field :receipt %>
  </div>

  <div>
    <%= form.check_box :ph %>
  </div>

  <div>
    <%= form.check_box :lime %>
  </div>

  <div>
    <%= form.check_box :om %>
  </div>

  <div>
    <%= form.check_box :p %>
  </div>

  <div>
    <%= form.check_box :k %>
  </div>

  <div>
    <%= form.collection_select(:channel, @channels, :to_s, :to_s, prompt: true) %>
  </div>

  <div>
    <%= form.text_area :remark %>
  </div>

  <div>
    <%= form.date_field :analyzed %>
  </div>
  
  <div>
    <%= form.primary %>
  </div>
<% end %>
<div class="card">
  <div class="card-body">
  <%= search_form_for @q, class: "row" do |f| %>
    <div class="col-sm-2">
      <div class="input-group input-group-sm">
        <div class="input-group-text">Code</div>          
        <%= f.search_field :code_cont, class: "form-control" %>
      </div>
    </div> 
    <div class="col-sm-3">
      <div class="input-group input-group-sm">
        <div class="input-group-text">Receive</div>          
        <%= f.date_field :receive_cont, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-2">
        <%= f.submit class: 'btn btn-sm btn-primary' %>
    </div>   
  <% end %>
  </div>
</div>